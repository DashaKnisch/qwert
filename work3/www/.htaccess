RewriteEngine On

# Исключения для статических файлов и существующих файлов
RewriteCond %{REQUEST_URI} ^/static/ [OR]
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.*)$ - [L]

# Перенаправляем все остальные запросы на наш роутер
RewriteRule ^(.*)$ /index.php [L,QSA]
